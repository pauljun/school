.home-wrapper{
  height: 100%;
}

.home-wrapper .nav{
  display: flex;
  padding: 24rpx 0;
  height: 28rpx;
  background: #00C277;
}

.home-wrapper .nav view{
  flex: 1;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  line-height: 28rpx;
}

.home-wrapper .map{
  height: calc(100% - 136rpx);
  background: #00C277;
}

.map-container{
  height: 100%;
  padding: 30rpx;
  border-radius: 30rpx 30rpx 0 0;
  background: #fff;
}

.callout{
  background: #FFFFFF;
  border-radius: 4px;
  font-size: 26rpx;
  color: #28282C;
  padding: 10rpx;
  text-align: center;
}
.price{
  color: #FF3341;
  margin-top: 4rpx;
  font-weight: bold;
}

.home-wrapper .nav view:first-child{
  border-right: 2rpx solid #FFFFFF;
}

.home-wrapper .nav view image{
  width: 16rpx;
  height: 10rpx;
  vertical-align: 0.24em;
}

.home-wrapper map{
  height: 100%;
  width: 100%;
}